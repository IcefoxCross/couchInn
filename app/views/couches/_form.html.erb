<%= form_for(@couch) do |f| %>
  <% if @couch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@couch.errors.count, "error") %> prohibited this couch from being saved:</h2>

      <ul>
      <% @couch.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', label: 'Name', placeholder: 'Ingrese el nombre' %>
  </div>
  <div class="field">
    <%= f.label :type_id %><br>
    <%= collection_select(:couch, :type_id, Type.all, :id, :name, {}, { class: 'form-control'}) %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: 'form-control', label: 'Description', placeholder: 'Ingrese la descripcion' %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location, class: 'form-control', label: 'Location', placeholder: 'Ingrese la localizacion' %>
  </div>
  <div class="field">
    <%= f.label :dateBegin %><br>
    <%= f.datetime_select :dateBegin %>
      
  </div>
  <div class="field">
    <%= f.label :dateEnd %><br>
    <%= f.datetime_select :dateEnd %>
  </div>
  <div class="field">
    <%= f.label :maxHosts %><br>
      <%= f.number_field :maxHosts, class: 'form-control', label: 'maxHosts', placeholder: 'Ingrese el numero maximo de inquilinos' %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.url_field :image, class: 'form-control', label: 'Image', placeholder: 'Ingrese el link a la imagen' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
