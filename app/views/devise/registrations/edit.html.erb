<div class="row">
  <div class="col-md-8">

    <h2>Editar Usuario</h2>

    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><h5><%= message %></h5></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <!--<%= devise_error_messages! %>-->

      <div class="field form-group">
        <%= f.label "Nombre" %><br>
        <%= f.text_field :name, required: true %>
      </div>

      <div class="field form-group">
        <%= f.label "Apellido" %><br>
        <%= f.text_field :lastName, required: true %>
      </div>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Actualmente esperando confirmación para: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <%= f.label "Contraseña" %> <i>(dejar en blanco si no querés cambiarlo)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field form-group">
        <%= f.label "Confirmar contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field form-group">
        <%= f.label "Contraseña actual" %> <i>(necesitamos tu contraseña actual para confirmar los cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
        <% if resource.errors[:current_password].any? %>
          <div class="alert alert-danger"> <p>Este campo no puede estar en blanco.</p> </div>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "Actualizar", class: "btn btn-default" %>
      </div>
    <% end %>

    <br>
      <div class="row">
        <div class="col-md-10">
          <div class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title">Eliminar mi cuenta</h3>
            </div>
            <div class="panel-body">
              <p class="text-danger">ADVERTENCIA: Una vez realizado el proceso no se puede recuperar la cuenta, teniendo que crear una nueva en su lugar.</p>
              <%= button_to "Eliminar", registration_path(resource_name), data: { confirm: "Estás seguro?" }, method: :delete, class: "btn btn-default" %>
            </div>
          </div>
        </div>
      </div>

    <br>
    <br>
    <%= link_to "Volver", current_user , class: "btn btn-link"%>
  </div>
</div>