      <div class="btn-toolbar pull-right">

        <% if !user_signed_in? %>
           <%= link_to 'Ingresar', login_path, class: "btn btn-default"%>
        <% else %>

          <% if current_user.admin? %>
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle " type="button" id="dropdownMenuAdmin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Menú
