<%= form_for(@reservation) do |f| %>

  <% if @reservation.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @reservation.errors.full_messages.each do |message| %>
        <li><h5><%= message %></h5></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Fecha de Inicio" %><br>
    <%= f.date_field :start_date, required: true %>
  </div>
  <div class="field">
    <%= f.label "Fecha Final" %><br>
    <%= f.date_field :end_date, required: true %>
  </div>
  <div>
    <%= f.hidden_field :couch_id %>
  </div>
  <div class="actions">
    <%= f.submit "Enviar", class: "btn btn-default" %>
  </div>
  
<% end %>


<br>