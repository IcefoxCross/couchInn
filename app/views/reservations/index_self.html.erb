<h1>Mis Reservas</h1>

<div class="row">
  <div class="col-md-8">

    <table class="table">
      <thead>
        <tr>
          <th>Hospedaje</th>
          <th>Fecha de Inicio</th>
          <th>Fecha Final</th>
          <th>Estado</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
            <td><h4><%= reservation.couch.name %></h4></td>
            <td><h4><%= reservation.start_date %></h4></td>
            <td><h4><%= reservation.end_date %></h4></td>
            <% if reservation.confirmed? %>
              <td><h4><span class="label label-default">Confirmado</span><h4></td>
            <% else %>
              <td><h4><span class="label label-warning">En espera</span><h4></td>
            <% end %>
            <td><%= link_to 'Eliminar', reservation, method: :delete, data: { confirm: 'Â¿Seguro de querer elimirar la Reserva?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
